# Flask Configuration
# Copy this file to .env and fill in the values

# Environment: development, testing, or production
FLASK_CONFIG=development

# Secret key for session signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here

# Database URL
# Development: sqlite:///auction.db
# Production: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///auction.db

# Admin credentials
ADMIN_USERNAME=admin

# For development only (plaintext password)
ADMIN_PASSWORD=your-dev-password

# For production (bcrypt hash) - takes precedence over ADMIN_PASSWORD
# Generate with: python -c "from app.auth import hash_password; print(hash_password('your_password'))"
ADMIN_PASSWORD_HASH=

# Cricket API (optional)
CRICKET_API_KEY=
